# API Configuration
# Supports Anthropic Claude, GLM, and other compatible APIs
ANTHROPIC_API_KEY=your_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Sensitive Data Filtering Configuration
# Available levels: OFF (no filtering), PARTIAL (partial masking), STRICT (full redaction)
SENSITIVE_FILTER_LEVEL=PARTIAL

# Rate Limiting Configuration
# Set to 0 to disable individual rate limiters
API_RATE_LIMIT=60          # API requests per minute
ACTION_RATE_LIMIT=30       # Browser actions per 10 seconds
NAVIGATION_RATE_LIMIT=10   # Page navigations per 30 seconds

# Browser Configuration
USER_DATA_DIR=./user_data

# Logging Configuration
# Available levels: OFF, INFO, DEBUG
LOG_LEVEL=INFO

# Security Configuration
# Enable/disable risk evaluation for actions
ENABLE_RISK_EVALUATION=true

# Browser launch options
HEADLESS=false
BROWSER_TIMEOUT=30000

# Model Configuration (optional)
# Available models: claude-sonnet-4-5, claude-4.5-haiku, claude-3-haiku-20240307, claude-3-opus-20240229
MAIN_MODEL=claude-sonnet-4-5
RISK_MODEL=claude-4.5-haiku

# Token Configuration (optional)
# Leave unset for model defaults, or specify custom limits
# MAX_TOKENS=8000